<?xml version="1.0" encoding="UTF-8"?>
<persistence> xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">

    <persistence-unit name="myPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>
            <!-- Configuración de Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/> <!-- Actualiza la base de datos automáticamente -->
            <property name="hibernate.show_sql" value="true"/> <!-- Muestra las consultas SQL -->
            <property name="hibernate.format_sql" value="true"/> <!-- Formatea las consultas -->

            <!-- Datos de la conexión a la base de datos en phpMyAdmin -->
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/prestamocomputadores"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/> <!-- Contraseña de root, si es diferente cámbiala -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
